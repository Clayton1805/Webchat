<!DOCTYPE html>
<html>
  <head>
    <title>Socket.IO - trybe</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font: 13px Helvetica, Arial;
      }
      form {
        background: #000;
        padding: 3px;
        position: fixed;
        bottom: 0;
        width: 100%;
      }
      form input {
        border: 0;
        padding: 10px;
        width: 90%;
        margin-right: 0.5%;
      }
      form button {
        width: 9%;
        background: rgb(130, 224, 255);
        border: none;
        padding: 10px;
        cursor: pointer;
      }
      ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      ul li {
        padding: 5px 10px;
      }
      ul li:nth-child(odd) {
        background: #eee;
      }
    </style>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.0.4/socket.io.js"></script>
    <script>
      window.onload = () => {
        const loadStorage = (key, initialValue) => {
          try {
            const serializedState = localStorage.getItem(key);
            if (serializedState === null) {
              return initialValue;
            }
            return JSON.parse(serializedState);
          } catch (err) {
            return initialValue;
          }
        };

        const saveStorage = (nameKey, state) => {
          try {
            const serializedState = JSON.stringify(state);
            localStorage.setItem(nameKey, serializedState);
          } catch (err) {
            // ignore
          }
        };

        const socket = io('http://localhost:3000');

        const button = document.querySelector('#send-button');
        button.addEventListener('click', () =>{
          const inputMessage = document.querySelector('#message-box');
          const nickname = document.querySelector('#online-user');
          socket.emit('message', { nickname: nickname.innerHTML, chatMessage: inputMessage.value });
          inputMessage.value = '';
          return false;
        })

        const messagesUl = document.querySelector('#mensagens');

        const createMessage = (message) => {
          const li = document.createElement('li');
          li.innerText = message;
          messagesUl.appendChild(li);
          // const childrenLi = messagesUl.children;
          // childrenLi[childrenLi.length - 1].name = 'super message';
        }
        
        socket.on('messageCli', (mensagem) => createMessage(mensagem));

        // const ola = () => {
        //   const lis = document.getElementById('mensagens');
        //   lis.children.forEach((element) => {
        //     element.style.display = 'none';
        //   })
        // }

        const userUl = document.querySelector('#user-on');

        const createUserOn = (message) => {
          const li = document.createElement('li');
          li.innerText = message;
          userUl.appendChild(li);
        }
        // Quando nosso evento `ola` for emitido, vamos pegar a string mensagem enviada pelo nosso evento e passar para a função `createMessage`
        socket.on('usersOn', (mensagem) => createUserOn(mensagem));

        const randomName = () => {
          const characters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789';
          let result = '';
          var charactersLength = characters.length;
          for (let i = 0; i < 16; i++) {
            result += characters[Math.floor(Math.random() * charactersLength)];
          }
          return result
        }

        const nickname = document.querySelector('#online-user');
        nickname.innerHTML = loadStorage('nickname', randomName());
        saveStorage('nickname', nickname.innerHTML);

        const nickname2 = document.querySelectorAll('.online-user2');

        nickname2.forEach((element) => {
          if (element.innerHTML === nickname.innerHTML) {
            messagesUl.removeChild(element);
          }
        });

        console.log('socket',socket)
        console.log('socket.id',socket.ids)
        socket.emit('userOn', nickname.innerHTML);

        const nicknameButton = document.querySelector('#nickname-button');
        nicknameButton.addEventListener('click', () => {
          const nicknameBox = document.querySelector('#nickname-box');
          nickname.innerHTML = nicknameBox.value;
          saveStorage('nickname', nickname.innerHTML);
        })
      }
    </script>
  </head>
  <body>
    <div>
      <div>
        <input id="nickname-box" type="text" data-testid="nickname-box">
        <button id="nickname-button" data-testid="nickname-button">Salvar</button>
      </div>
      <p>
        Seu nickname é:
        <%= ' ' %>
        <span id="online-user" data-testid="online-user"></span>
      </p>
    </div>
    <h2>mensagens</h2>
    <ul id="mensagens">
      <% arrayMessages.forEach(({ currentDate, nickname, chatMessage }) => { %>
        <li data-testid="message"><%= currentDate %> - <%= nickname %>: <%= chatMessage %></li>
      <% }) %>      
    </ul>
    <h2>pessoas online</h2>
    <ul id="user-on">
      <% arrayUsersOn.forEach(({ nickname }) => { %>
        <li class="online-user2" data-testid="online-user" ><%= nickname %></li>
      <% }) %>      
    </ul>
    <div>
      <input id="message-box" data-testid="message-box" type="text" />
      <button id="send-button" data-testid="send-button" >Enviar</button>
    </div>
  </body>
</html>
